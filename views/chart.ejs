<!DOCTYPE html>
<html>
  <head>
    <title>Folder Size Memory</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
    
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">



  </head>

  <body>

<div class="container">
  
  <div class="row">
      <div class="col-md-3">
         
         <canvas id="myChart" width="18" height="18"></canvas>         

      </div>


      <div class="col-md-5"> </div>

      <div class="col-md-4"> </div>
  </div>

</div>


<br>
<br>
<br>
<a class=" btn-info btn btn-info" href="/" role="button">Home Page</a>

  </body>
</html>






<script>

 
var a = <%= size %> ;

var file = [a, 1024];

// console.log(a);

  

 
var ctx = document.getElementById('myChart').getContext('2d');

var myChart = new Chart(ctx, {
    type: 'pie',
    
    
    data: {
        labels: [ 'Folder Used (MB)', 'Total Memory:(MB)'],

        datasets: [{
            label: 'Momory used (MB)',
                        
            data: file,


            backgroundColor: [                
                'rgb(0, 128, 128, 0.4)',
                'rgba(54, 162, 235, 0.4)',
                'rgba(255, 206, 86, 0.4)',
                'rgba(75, 192, 192, 0.4)',
                'rgba(153, 102, 255, 0.4)',
                'rgba(255, 159, 64, 0.4)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 2)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth:2
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero: true
                }
            }]
        }
    }
});
</script>